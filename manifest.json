{
  "manifest_version": 3,
  "name": "D365 CCaaS Dialer Helper",
  "version": "2.0.7",
  "description": "Enterprise-grade auto-population of country/region code in Dynamics 365 CCaaS external transfer dialer",
  "author": "Your Name",
  "permissions": ["storage", "activeTab", "scripting", "webNavigation"],
  "host_permissions": ["https://*.dynamics.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/d365logo.png",
      "32": "icons/d365logo.png",
      "48": "icons/d365logo.png",
      "128": "icons/d365logo.png"
    }
  },
  "icons": {
    "16": "icons/d365logo.png",
    "32": "icons/d365logo.png",
    "48": "icons/d365logo.png",
    "128": "icons/d365logo.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.dynamics.com/*"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle",
      "all_frames": true,
      "match_about_blank": true
    }
  ]
}
